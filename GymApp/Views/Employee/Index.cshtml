@using GymApp.Models
@model List<Employee> 


<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Surname</th>
        <th>Position</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {

        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.Position</td>
            <td><a href="/Employee/DeleteEmployee/@item.ID" class="btn btn-danger">Delete</a></td>
            <td><a href="/Employee/GetEmployee/@item.ID" class="btn btn-success">Update</a></td>


        </tr>
    }
</table>
<a href="/Employee/NewEmployee/" class="btn btn-primary">New Employee</a>
